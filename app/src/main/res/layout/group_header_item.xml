<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/groupImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название группы"
        android:textSize="22sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@id/groupImage"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/groupSubs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подписчики: "
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@id/groupImage"
        app:layout_constraintTop_toBottomOf="@id/groupName"/>

    <TextView
        android:id="@+id/subsAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120 000"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@id/groupSubs"
        app:layout_constraintTop_toBottomOf="@id/groupName"/>

    <Button
        android:id="@+id/subscribeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подписаться"
        app:layout_constraintStart_toStartOf="@id/groupName"
        app:layout_constraintTop_toBottomOf="@id/groupSubs"/>

</androidx.constraintlayout.widget.ConstraintLayout>